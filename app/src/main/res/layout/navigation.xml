<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:Context="com.dnerd.dipty.farmcheck.Navigation">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/dark_clouds"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/navProfileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/default_profile_image" />
        <TextView
            android:id="@+id/navTextViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="poojjjjj kkllll"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/navProfileImage"
            android:layout_marginLeft="25dp"
            android:layout_alignParentLeft="true"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"/>
        <TextView
            android:id="@+id/navTextViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="klllll oopp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/navTextViewName"
            android:layout_marginLeft="25dp"
            android:layout_alignParentLeft="true"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"/>

    </RelativeLayout>


</LinearLayout>